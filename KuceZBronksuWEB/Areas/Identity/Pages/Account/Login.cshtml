@page
@model LoginModel
<style>
    .login-container {
        width: 30%;
        margin: 0 auto;
        margin-top: 100px;
        background-color: #ffffff;
        padding: 20px;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }
</style>
@using KuceZBronksuBLL.Services
@inject LanguageService language
@{
    ViewData["Title"] = "Log in";
}
<div class="login-container">
    <h1>@language.Getkey("Log in")</h1>
        <section>
            <form id="account" method="post">
            <h2>@language.Getkey("Use a local account to log in.")</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label class="form-label">@language.Getkey("Email")</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label class="form-label">@language.Getkey("Password")</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div>
                <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">@language.Getkey("Log in")</button>
                </div>
                <div>
                    <p>
                    <a id="forgot-password" asp-page="./ForgotPassword">@language.Getkey("Forgot your password?")</a>
                    </p>
                    <p>
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">@language.Getkey("Register as a new user")</a>
                    </p>
                    <p>
                    <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">@language.Getkey("Resend email confirmation")</a>
                    </p>
                </div>
            </form>
        </section>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
