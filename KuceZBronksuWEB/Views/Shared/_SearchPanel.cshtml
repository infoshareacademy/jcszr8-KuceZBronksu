@model KuceZBronksuWEB.Models.SearchViewModel
<form asp-action="Search" asp-controller="Recipe">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
    <div class="card mb-4">
        <div class="card-header">Search Recipe</div>

        <div class="card-body">
            <div class="small text-muted">Ingredients</div>
            <div class="input-group">
                <input asp-for="IngrediendsList" class="form-control" type="text" placeholder="Enter search term..." aria-label="Enter search term..." />
            </div>
            <br>
            <div class="small text-muted">Meal type</div>
            <div class="input-group">
                <input asp-for="MealType" class="form-control" type="text" placeholder="Enter search term..." aria-label="Enter search term..." />

            </div>
            <br>
            <div class="small text-muted">Kcal amount</div>
            <div class="input-group">
                <input asp-for="KcalAmount" class="form-control" type="text" placeholder="Enter search term..." aria-label="Enter search term..." />

            </div>
            <br>
                        <section class="ftco-section">
                            <div class="container">
                                <div class="row justify-content-center">
                                    <div class="col-md-7 text-center mb-5">
                                        <h2 class="heading-section">Multiselect #05</h2>
                                    </div>
                                </div>
                                <div class="row justify-content-center">
                                    <div class="col-lg-4 d-flex justify-content-center align-items-center">
                                        <select class="js-select2" multiple="multiple">
                                            <option value="O1" data-badge="">Option1</option>
                                            <option value="O2" data-badge="">Option2</option>
                                            <option value="O3" data-badge="">Option3</option>
                                            <option value="O4" data-badge="">Option4</option>
                                            <option value="O5" data-badge="">Option5</option>
                                            <option value="O6" data-badge="">Option6</option>
                                            <option value="O7" data-badge="">Option7</option>
                                            <option value="O8" data-badge="">Option8</option>
                                            <option value="O9" data-badge="">Option9</option>
                                            <option value="O10" data-badge="">Option10</option>
                                            <option value="O11" data-badge="">Option11</option>
                                            <option value="O12" data-badge="">Option12</option>
                                            <option value="O13" data-badge="">Option13</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </section>

            <button class="btn btn-primary" id="button-search" type="submit">Search</button>
        </div>
        </div>
        </div>
        </div>
    </div>
</form>