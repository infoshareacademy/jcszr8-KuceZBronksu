@model IEnumerable<RecipeViewModel>
<div>
    @foreach (var comment in Model)
    {
        @Html.Partial("~/Views/Shared/_SearchPanel.cshtml",comment.SearchViewModel)
        break;
    }
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Label)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IngredientLines)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MealType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Calories)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Label)
            </td>
            <td>
                    @foreach (var ingredient in item.IngredientLines)
                    {
                        @Html.DisplayFor(modelItem => ingredient)
                        <br/>
                    }
                 
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MealType)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Calories)
            </td>
            <td>
                    <a class="btn btn-primary btn-lg active" asp-action="ShowRecipeDetails" asp-controller="Recipe" asp-route-label="@item.Label">
                    </a>
            </td>
        </tr>
}
    </tbody>
</table>
