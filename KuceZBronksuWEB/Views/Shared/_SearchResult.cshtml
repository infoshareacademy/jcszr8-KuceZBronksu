@model KuceZBronksuWEB.Models.RecipiesViewModel

<div>
    @Html.Partial("~/Views/Shared/_SearchPanel.cshtml", Model.Search)
</div>

<body>
        <div class="container">
            <div class="row">
        @foreach (var item in Model.Recipies)
        {
                <div class="col-md-6 col-lg-3">
                    <div class="card">
                        <img src="" class="card-img-top"/>
                        <div class="card-block">
                            <h3 class="card-title text-center">@Html.DisplayFor(modelItem => item.Label)</h3>
                            <p class="text-center">@Html.DisplayFor(modelItem => item.Calories) Kcal</p>
                        <div class="row">
                        <a class="btn btn-primary btn-lg active" asp-action="ShowRecipeDetails" asp-controller="Recipe" asp-route-label="@item.Label">Show details</a>
                        <a class="btn btn-primary btn-lg active" asp-action="ShowRecipeDetails" asp-controller="Recipe" asp-route-label="@item.Label">Add to favourite!</a>
                        </div>
                        </div>
                    </div>
                </div>
        }
            </div>
        </div>

<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
