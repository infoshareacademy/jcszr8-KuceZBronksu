@model KuceZBronksuWEB.Models.RecipeViewModel

@{
    ViewData["Title"] = "_RecipeView";
}

<h1>Recipe Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Label)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Label)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Calories)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Calories)
        </dd>
        @foreach (var item in Model.IngredientLines)
        {
            <dd class="col-sm-10">
                @item
            </dd>
        }   
    
    <dt class="col-sm-2">Recipe steps</dt>
        <br>
        @foreach (var item in Model.RecipeSteps)
        {
            <dd class="col-sm-10">
                @item
            </dd>
        }   
    </dl>
</div>
<div class ="image">
<img src="@Model.Images.LARGE.Url" alt="@Model.Images.LARGE.Url"></img>
</div>
