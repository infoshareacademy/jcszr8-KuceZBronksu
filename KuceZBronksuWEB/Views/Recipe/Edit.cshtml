@model KuceZBronksuWEB.Models.RecipeViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Edit Recipe</h4>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Label" class="control-label"></label>
                <input asp-for="Label" class="form-control" />
                <span asp-validation-for="Label" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            @*            <div class="form-group">
            <label asp-for="IngredientLines" class="control-label"></label>
            <input asp-for="IngredientLines" class="form-control" />
            <span asp-validation-for="IngredientLines" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <label asp-for="IngredientLines" class="control-label"></label>
                <ul class="ingridient-container">
                    @foreach (var item in Model.IngredientLines)
                    {
                        <li class="ingridient-item">
                            @item
                            <button class="ingridient-delete" onclick="deleteIngridient(this)">delete</button>
                        </li>
                    }
                </ul>
                <span asp-validation-for="IngredientLines" class="text-danger"></span>
            </div>
            @*            <div class="form-group">
            <label asp-for="RecipeSteps" class="control-label"></label>
            <input asp-for="RecipeSteps" class="form-control" />
            <span asp-validation-for="RecipeSteps" class="text-danger"></span>
            </div>*@

            <div class="form-group">
                <label asp-for="RecipeSteps" class="control-label"></label>
                <input asp-for="RecipeSteps" id="recipe-steps" class="form-control" hidden="true" />
                <ul class="steps-container">
                    @foreach (var item in Model.RecipeSteps)
                    {
                        <li class="step-item" id="@item">
                            @item
                            <button class="step-delete" onclick="deleteStep(this)">delete</button>
                        </li>
                    }
                </ul>
                <span asp-validation-for="RecipeSteps" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="Calories" class="control-label"></label>
                <input asp-for="Calories" class="form-control" type="number" />
                <span asp-validation-for="Calories" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Cautions" class="control-label"></label>
                <select asp-for="Cautions" class="form-select" multiple aria-label="multiple select example">
                    <option value="Sulfites">Sulfites</option>
                    <option value="Gluten">Gluten</option>
                    <option value="Wheat">Wheat</option>
                </select>
                <span asp-validation-for="Cautions" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HealthLabels" class="control-label"></label>
                <select asp-for="HealthLabels" class="form-select" multiple aria-label="multiple select example">
                    <option value="Vegan">Vegan</option>
                    <option value="Gluten-Free">Gluten-Free</option>
                    <option value="Fish-Free">Fish-Free</option>
                </select>
                <span asp-validation-for="HealthLabels" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DietLabels" class="control-label"></label>
                <select asp-for="DietLabels" class="form-select" multiple aria-label="multiple select example">
                    <option value="Low-Fat">Low-Fat</option>
                    <option value="Low-Sodium">Low-Sodium</option>
                </select>
                <span asp-validation-for="DietLabels" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CuisineType" class="control-label"></label>
                <select asp-for="CuisineType" class="form-select" multiple aria-label="multiple select example">
                    <option value="American">American</option>
                    <option value="Mexican">Mexican</option>
                </select>
                <span asp-validation-for="CuisineType" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="MealType" class="control-label"></label>
                <select asp-for="MealType" class="form-select" multiple aria-label="multiple select example">
                    <option value="Breakfast">Breakfast</option>
                    <option value="Dinner">Dinner</option>
                </select>
                <span asp-validation-for="MealType" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index"><input type="button" value="Back" class="btn btn-primary" /></a>
            </div>

        </form>
    </div>



    <script src="https://code.jquery.com/jquery-3.6.4.min.js"
            integrity="sha256-oP6HI9z1XaZNBrJURtCoUT5SUnxFr8s3BzRl+cbzUq8="
            crossorigin="anonymous"></script>
    <script>

        $("button.step-delete,button.ingridient-delete").click(function (event) {
            event.preventDefault();
        });

        function deleteIngridient(element) {
            element.parentElement.remove()
        }
        function deleteStep(element) {
            element.parentElement.remove()
        }


        $("input[type=submit]").submit(function (event) {
            event.preventDefault();
            var ingridientVal = "";
            var ingridients = document.getElementsByClassName("ingridient-item");
            for (ingridient of ingridients) {
                ingridientVal += `${ingridient.outerText},`;
            }
            document.getElementById("recipe-steps").value = ingridientVal;
            event.submit();
        });


    </script>
